{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "declaration": true,
        "target": "es5"
    },
    "types": ["mocha", "jest"],
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"],
    "lib": ["es6", "es2017.object"]
}
